<h1>レシピ新規作成</h1>
<div class ="recipe_wrapper">
    <%= form_with model: @recipe, local: true do |form| %>
      <%= render 'layouts/error_messages', model: form.object %>
      <div>
        <%= form.label :photo,"イメージ画像" ,class:"post_photo"%>
        <%= form.file_field :photo %>
      </div>

      <div>
        <%= form.label :title,"タイトル" ,class:"title" %>
        <%= form.text_area :title %>
      </div>

      <div>
        <%= form.label :material,"必要な具材" ,class:"material" %>
        <%= form.text_area :material %>
      </div>

      <div>
        <%= form.label :process,"料理手順" ,class:"process"%>
        <%= form.text_area :process %>
      </div>

      <div>
        <%= form.label :cooking_minute,"料理にかかる時間(分)" ,class:"time"%>
        <%= form.text_field :cooking_minute %>
      </div>

      <div>
        <%= form.submit "登録する" ,class:"submit"%>
      </div>
    <% end %>
</div>
