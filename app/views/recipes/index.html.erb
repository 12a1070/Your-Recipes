<div class="main_wrapper">
  <%= render partial: 'search', class: "search" %>
  <div class="recipes">
    <% @recipes.each do | recipe| %>
      <div class="recipe">
        <% if recipe.photo_url.present? %>
          <%= image_tag recipe.photo_url %>
        <% end %>
        <div class ="list">
          <h3>
            <%= link_to recipe.title, recipe_path(recipe), class: "recipe_link"%>
          </h3>
          <ul>
            <li>作成者:<%= recipe.user.name %></li>
            <li>投稿日:<%= recipe.created_at.strftime("%Y年 %m月 %d日").to_s %></li>
          </ul>
        </div>
        <% if user_signed_in? %>
          <% if recipe.user_id == current_user.id %>
            <div class="edit"><%= link_to "編集する", edit_recipe_path(recipe) %></div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
