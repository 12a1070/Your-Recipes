<span><%= @recipe.title %></span>
<div>調理時間:</div>
  <span><%= @recipe.cooking_minute %>分</span>
<div>作成者:</div>
<span><%= @recipe.user.name %></span>
<% if user_signed_in? %>
    <% if @recipe.user_id == current_user.id %>
      <span><%= link_to "編集する", edit_recipe_path(@recipe) %></span>
    <% end %>
<% end %>
<div>
  <% if @recipe.photo_url.present? %>
    <%= image_tag @recipe.photo_url %>
  <% end %>
</div>
<div>必要な具材</div>
  <span><%= @recipe.material %></span>
<div>料理手順</div>
  <span><%= @recipe.process %></span>
  <% if user_signed_in? %>
    <% if current_user != @recipe.user %>
      <div class="recipe-favorite">
      <% if @recipe.favorited_by(current_user).blank? %>
        <div>お気に入り</div><%= link_to "登録する", recipe_favorites_path(@recipe),data: { "turbo-method": :post}, class: "btn btn-success btn-sm" %>
      <% else %>
        <div>お気に入り</div><%= link_to "解除する", recipe_favorite_path(@recipe,@recipe.favorited_by(current_user)),data: { "turbo_method": :delete }, class: "btn btn-outline-success btn-sm" %>
      <% end %>
      </div>
    <% end %>
  <% end %>

<% if user_signed_in? %>
  <% if @recipe.user_id == current_user.id %>
    <%= link_to 'レシピを削除する',recipe_path(@recipe.id), data: { turbo_method: :delete, turbo_confirm: " 本当に削除しますか?" } %>
  <% end %>
<% end %>
